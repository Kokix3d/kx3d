{
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*\\.(js|css|json|xml|txt|ico|svg))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.(webp|jpg|jpeg|png|gif))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.html)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "^/$", "dest": "/index.html" },

    /* Section roots (pretty URLs) -> real static HTML files */
    { "src": "^/unreal$", "dest": "/Unreal/3d-models.html" },
    { "src": "^/blender$", "dest": "/Blender/3d-models.html" },
    { "src": "^/houdini$", "dest": "/Houdini/assets.html" },
    { "src": "^/membership$", "dest": "/Membership/membership.html" },
    { "src": "^/ae$", "dest": "/ae/plugins.html" },
    { "src": "^/pp$", "dest": "/pp/plugins.html" }
  ]
}
